<section>
    <h3>編集する画像を読み込む</h3>
    <form class="input-group input-group-lg" data-ng-submit="inputUrl()">
        <input type="text" class="form-control" placeholder="Image URL" data-ng-model="url" />
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">読み込む</button>
        </span>
    </form>
    <h3>tiqav画像検索</h3>
    <form class="input-group input-group-lg" data-ng-submit="searchTiqav()">
        <input type="text" class="form-control" placeholder="query" data-ng-model="query" />
        <span class="input-group-btn">
            <button class="btn" type="submit">検索</button>
        </span>
    </form>
    <div>
        {{=<% %>=}}
        <span data-ng-hide="!images.length" data-ng-repeat="image in images"><img src="{{image.src}}" width="200" height="200" data-ng-click="selectImage($event)" /></span>
        <%={{ }}=%>
    </div>
</section>
